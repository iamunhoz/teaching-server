{
	"name": "node-ts",
	"version": "0.0.0",
	"author": "dayblox",
	"description": "Node.js & TypeScript starter",
	"engines": {
		"node": ">=18.11",
		"pnpm": ">=7.27"
	},
	"scripts": {
		"dev": "cp ./src/scripts.js ./dist/scripts.js && pnpm /dev:.*/",
		"dev:build": "cp ./src/scripts.js ./dist/scripts.js && esbuild dev.ts ./src --bundle --outdir=dist --packages=external --platform=node --sourcemap --watch",
		"dev:run": "cp ./src/scripts.js ./dist/scripts.js && node --inspect --no-warnings --loader ./dist/dev.js --watch dist/src",
		"build": "cp ./src/scripts.js ./dist/scripts.js && esbuild index=./src --bundle --minify --outdir=dist --packages=external --platform=node",
		"start": "node dist"
	},
	"dependencies": {
		"@types/express": "^4.17.17",
		"cors": "^2.8.5",
		"esbuild": "^0.17.18",
		"express": "^4.18.2"
	},
	"devDependencies": {
		"@types/node": "^18.16.3"
	}
}
